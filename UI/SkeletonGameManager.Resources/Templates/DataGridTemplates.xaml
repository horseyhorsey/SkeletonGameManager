<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <ControlTemplate x:Key="Datagrid_AudioAssetTemplate">
        <DataGrid ItemsSource="{Binding AudioEntries}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Key}" Header="Key" Width="2*"/>
                <DataGridTextColumn Binding="{Binding File}" Header="File"/>
                <DataGridTextColumn Binding="{Binding Volume}" Header="Vol"/>
            </DataGrid.Columns>
        </DataGrid>
    </ControlTemplate>

</ResourceDictionary>