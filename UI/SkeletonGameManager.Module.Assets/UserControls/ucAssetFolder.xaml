<UserControl x:Class="SkeletonGameManager.Module.Assets.UserControls.ucAssetFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkeletonGameManager.Module.Assets.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <Button Content="{Binding Source={StaticResource Path_Dir}}"
                    ToolTip="{DynamicResource OpenDir}"
                    VerticalAlignment="Bottom" Height="30" Width="35" 
                    Command="{Binding OpenDirectoryCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"  Grid.Row="1">
            <TextBlock FontStyle="Italic" Text="{StaticResource DropFilesInfo}"/>
            <TextBlock Text=" - " />
            <TextBlock FontStyle="Italic" Text="{StaticResource FileOptionInfo}" 
                       Margin="10,0"/>
        </StackPanel>
    </Grid>
</UserControl>
