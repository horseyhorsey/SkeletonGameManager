<UserControl x:Class="SkeletonGameManager.WPF.Views.AssetViews.SfxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkeletonGameManager.WPF.Views.AssetViews"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid ItemsSource="{Binding Audio.Sfx}" Grid.Column="1"
                  CanUserAddRows="False" AutoGenerateColumns="False"       
                  Template="{StaticResource Datagrid_AudioAssetTemplate}"
                  >
        </DataGrid>
    </Grid>
</UserControl>
